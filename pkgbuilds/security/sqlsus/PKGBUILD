# Contributor: Jens Pranaitis <jens@chaox.net>
pkgname=sqlsus
pkgver=0.3
pkgrel=1
pkgdesc="MySQL injection and takeover tool"
arch=(i686)
url="http://sqlsus.sourceforge.net"
license=('GPL')
depends=("perl-libwww" "perl-www-mechanize" "perl-dbd-sqlite")
source=(http://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver.tgz)
md5sums=('de26bb0fdcba192b1818191e1736dc25')
build() {
  cd "$srcdir/$pkgname-$pkgver"
  mkdir -p "$pkgdir"/{opt/$pkgname,usr/bin}
  cp -r conf.pm control_backdoor data modules shell sqlsus "$pkgdir"/opt/$pkgname/
  cat >> "$pkgdir"/usr/bin/$pkgname << EOF
#!/bin/bash
cd /opt/sqlsus
./sqlsus \$@
EOF
chmod 755 "$pkgdir"/usr/bin/$pkgname
}

