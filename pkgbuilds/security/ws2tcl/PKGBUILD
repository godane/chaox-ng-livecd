# Contributor: Jens Pranaitis <jens@chaox.net>
pkgname=ws2tcl
pkgver=1
pkgrel=1
pkgdesc="one command WEP crack script"
arch=("i686")
url="http://forum.aircrack-ng.org/index.php?topic=3734.30"
license=('unknown') # FIXME
depends=("aircrack-ng-svn" "tcl")
source=(http://jano.homelinux.net/wardriving/hack/ws2tcl.zip make-ws2-pretty.patch)
md5sums=('5c02eb93199dccebaac95d5c428fbf09'
         '68acbe34f0b358d10c3d9586d136e66f')
build() {
  cd "$srcdir/"
  patch -Np0 -i "${srcdir}"/make-ws2-pretty.patch || return 1
  install -D -m 755 ws2.tcl "$pkgdir"/usr/bin/ws2.tcl || return 1
  cd "$pkgdir"/usr/bin/ || return 1
  ln -s ws2.tcl ws2
}

