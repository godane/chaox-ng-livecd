# Contributor: Francesco Piccinno <stack.box@gmail.com>

pkgname=bluebugger
pkgver=0.1
pkgrel=1
pkgdesc="bluebugger is an implementation of the bluebug technique which was discovered by Martin Herfurt."
url="http://www.remote-exploit.org/codes_bluebugger.html"
license=('GPL')
depends=('bluez')
arch=(i686 x86_64)
source=(http://www.remote-exploit.org/codes/$pkgname/${pkgname}-${pkgver}.tar.gz)
md5sums=('a94f4356d904622daa69b35b9d13053e')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  sed -i "s|-g|${CFLAGS}|g" Makefile
  make || return 1
  install -Dm755 $pkgname "$pkgdir"/usr/bin/$pkgname || return 1
  install -Dm644 README "$pkgdir"/usr/share/doc/$pkgname/README || return 1
}

# vim:set ts=2 sw=2 et:
