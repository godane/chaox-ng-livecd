# Contributor: Ermak <ermak@email.it>
pkgname=openvas-plugins
pkgver=1.0.6
pkgrel=1
pkgdesc="The OpenVAS plugins"
arch=('i686' 'x86_64')
url="http://www.openvas.org/"
license=('GPL')
depends=('openvas-libraries' 'openvas-libnasl' 'openvas-server')
backup=()
source=(http://wald.intevation.org/frs/download.php/576/openvas-plugins-1.0.6.tar.gz)
md5sums=('e7354eb62d820a7a469b3cf79158fda4') #generate with 'makepkg -g'

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir/" install

}

