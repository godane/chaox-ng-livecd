# Contributor: Jens Pranaitis <jens@chaox.net>
# Contributor: nofxx <x@nofxx.com>
pkgname=wyd
pkgver=0.2
pkgrel=1
pkgdesc="Gets keywords from personal files and creates wordlists based on them"
arch=('i686' 'x86_64')
url="http://www.remote-exploit.org/codes/wyd"
license=('GPL')
depends=('perl')
source=(http://www.remote-exploit.org/codes/wyd/$pkgname-$pkgver.tar.gz)
md5sums=('a032c851e10a9eb102f5196c27b8e6b0')
	 
build() {
	cd "${srcdir}"/$pkgname-$pkgver
	install -d "${pkgdir}"/usr/share/wyd || return 1
	install -d "${pkgdir}"/usr/bin || return 1
	cp -r * "${pkgdir}"/usr/share/wyd || return 1
	chmod +x "${pkgdir}"/usr/share/wyd/wyd.pl || return 1
	echo "/usr/share/wyd/wyd.pl" > "${pkgdir}"/usr/bin/wyd || return 1
	chmod +x "${pkgdir}"/usr/bin/wyd || return 1
}
