pkgname=openvas-server
pkgver=2.0.1
pkgrel=1
pkgdesc="The OpenVAS server"
arch=('i686' 'x86_64')
url="http://www.openvas.org/"
license=('GPL')
depends=('openvas-libraries' 'openvas-libnasl')
install=$pkgname.install
source=(http://wald.intevation.org/frs/download.php/562/$pkgname-$pkgver.tar.gz $pkgname.rc $pkgname.install)
md5sums=('f68e2014113185a1e596408679eb192d' 'afaa392eebb28fdadeaeb63518e2d8e0' 'f936d043db46a2c75d9f4be153fc65cd')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var
  make || return 1
  make DESTDIR="$pkgdir/" install

  #install the rc.d script
  install -D -m755 ../$pkgname.rc $startdir/pkg/etc/rc.d/openvasd
}

