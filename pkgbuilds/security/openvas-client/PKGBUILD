# Contributor: Ermak <ermak@email.it>
pkgname=openvas-client
pkgver=2.0.4
pkgrel=1
pkgdesc="The OpenVAS client"
arch=('i686' 'x86_64')
depends=("gtk2")
url="http://www.openvas.org/"
license=('GPL')
source=(http://wald.intevation.org/frs/download.php/595/openvas-client-2.0.4.tar.gz)
md5sums=('f997cb13a615b23061dfcf3a2bed2dec') 

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir/" install

}

