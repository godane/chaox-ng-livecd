# Contributor: Thomas Schneider <blacklotus@jenux.homelinux.org>
pkgname=cowpatty
pkgver=4.6
pkgrel=1
pkgdesc="Wireless WPA/WPA2 PSK handshake cracking utility"
arch=('i686' 'x86_64')
url="http://www.willhackforsushi.com/?page_id=50"
license=('GPL')
depends=('openssl' 'libpcap')
source=("http://www.willhackforsushi.com/code/$pkgname/$pkgver/$pkgname-$pkgver.tgz")
md5sums=('b90fd36ad987c99e7cc1d2a05a565cbd')

build() {
  cd "${srcdir}/$pkgname-$pkgver"
  sed -i "s/-g3 -ggdb/${CFLAGS}/g" Makefile || return 1
  sed -i "s|/usr/local|/usr|g" Makefile || return 1
  make || return 1
  make DESTDIR="${pkgdir}/" install || return 1
}
