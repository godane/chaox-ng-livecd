# Contributor: Ermak <ermak@email.it>
pkgname=openvas-libnasl
pkgver=2.0.1
pkgrel=1
pkgdesc="The OpenVAS NASL scripting language"
arch=('i686' 'x86_64')
url="http://www.openvas.org/"
license=('GPL')
depends=('bison' 'gpgme' 'openvas-libraries>=2.0.1')
source=(http://wald.intevation.org/frs/download.php/561/$pkgname-$pkgver.tar.gz)
md5sums=('658c730b902a04f2e2d057a303c2e6f3')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir/" install
}

