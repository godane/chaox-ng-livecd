pkgname=whois
pkgver=4.7.33
pkgrel=1
pkgdesc="The whois client by Marco d'Itri"
arch=(i686 x86_64)
license=('GPL')
depends=('glibc' 'libidn')
makedepends=('perl')
source=(http://ftp.debian.org/debian/pool/main/w/whois/${pkgname}_$pkgver.tar.gz)
url="http://www.linux.it/~md/software/"

build() {
  cd "${srcdir}"/$pkgname-$pkgver
  mkdir -p "${pkgdir}"/usr/bin "${pkgdir}"/usr/share/man/man1
  sed 's|INSTALL= /usr|INSTALL= |' -i po/Makefile
  make prefix=/usr HAVE_LIBIDN=1 || return 1
  make prefix=/usr BASEDIR="${pkgdir}" install-whois
}
md5sums=('740915344c06b5566823d86bb5e12a76')

