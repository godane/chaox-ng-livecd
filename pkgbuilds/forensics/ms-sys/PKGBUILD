pkgname=ms-sys
pkgver=2.1.3
pkgrel=2
pkgdesc="A tool to write Win9x-.. master boot records (mbr) under linux - RTM!"
arch=('i686' 'x86_64')
url="http://ms-sys.sourceforge.net/"
license=('GPL')
depends=('glibc')

source=(http://downloads.sourceforge.net/sourceforge/ms-sys/$pkgname-$pkgver.tgz)

md5sums=('6fad0a69ac89440ad4f696dbbbf11497')

build() {
  cd "${srcdir}"/$pkgname-$pkgver
  mkdir -p "${pkgdir}"/usr/{bin,share/man/man1}
  sed -i "s|MANDIR =.*|MANDIR = /usr/share/man|g" Makefile
  make PREFIX="/usr" || return 1
  make PREFIX="/usr" DESTDIR="${pkgdir}" install
}
