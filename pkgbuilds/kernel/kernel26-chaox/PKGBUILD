pkgbase=kernel
pkgname=("kernel26-chaox" "kernel26-chaox-sources")
_basekernel=2.6.29
pkgver=2.6.29.4
pkgrel=2
pkgdesc="Linux kernel based on slax config. Used in chaox-ng"
arch=("i686")
license=('GPL2')
groups=('base')
url="http://www.kernel.org"
makedepends=("git" "lzma")
source=(ftp://ftp.kernel.org/pub/linux/kernel/v2.6/linux-$_basekernel.tar.bz2
	http://kernel.org/pub/linux/kernel/v2.6/patch-$pkgver.bz2
  config
	http://patches.aircrack-ng.org/mac80211_2.6.28-rc4-wl_frag+ack_v3.patch
  #ath5k patches stolen from pentoo ;)
  https://trac.pentoo.ch/pentoo/export/763/kernel/trunk/2.6/2.6.28/4001_ath5k-injection-2.6.28.patch
  https://trac.pentoo.ch/pentoo/export/763/kernel/trunk/2.6/2.6.28/4007_ath5k-pass-failed-crc.patch
  https://trac.pentoo.ch/pentoo/export/763/kernel/trunk/2.6/2.6.28/4008_ath5k-frequency-chaos-2.6.28.patch
	openlog.patch
	http://patches.aircrack-ng.org/zd1211rw_inject_2.6.26.patch
  http://patches.aircrack-ng.org/mac80211-2.6.29-fix-tx-ctl-no-ack-retry-count.patch
  http://patches.aircrack-ng.org/rtl8187-mac80211-injection-speed-2.6.28-wl.patch
  #squashfs patches courtesy of pentoo, thanks guys
  https://trac.pentoo.ch/pentoo/export/820/kernel/trunk/2.6/2.6.29/4300_squashfs-3-regress.patch
  https://trac.pentoo.ch/pentoo/export/820/kernel/trunk/2.6/2.6.29/4305_sqlzma-457.patch
  ftp://kernel.org/pub/linux/kernel/people/edward/reiser4/reiser4-for-2.6/reiser4-for-2.6.29.patch.gz
  lzma-bzip2.patch
  kernel26-chaox.preset
)
