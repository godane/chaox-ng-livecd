# Contributor: Jens Pranaitis <jens@chaox.net>
pkgname=chaox-menus
pkgver=0.1.11
pkgrel=1
pkgdesc="chaox menu for xfce4"
arch=("i686")
url="http://chaox.wordpress.com"
license=('GPL')
depends=("xfdesktop")
source=(http://www.chaox.net/~jens/chaox/$pkgname-$pkgver.tar.bz2)
md5sums=('15d97aeab095bf92a672a0f512e68f1a')
build() {
  cd "${srcdir}"/chaox-menus
  for x in *.directory
  do
    install -m 644 -D "$x" "${pkgdir}"/usr/share/desktop-directories/"$x"
  done
  for x in *.desktop
  do
    install -m 644 -D "$x" "${pkgdir}"/usr/share/applications/"$x"
  done
}
# vim:set ts=2 sw=2 et:
