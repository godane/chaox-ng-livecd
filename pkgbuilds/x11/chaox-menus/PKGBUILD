# Contributor: Jens Pranaitis <jens@jenux.homelinux.org>
pkgname=chaox-menus
pkgver=0.1.3
pkgrel=1
pkgdesc="chaox menu for xfce4"
arch=("i686")
url="http://chaox.wordpress.com"
license=('GPL')
depends=("xfdesktop")
source=(http://jenux.homelinux.org/~jens/chaox/$pkgname-$pkgver.tar.bz2)
md5sums=('4a9d2f80327636f32542c462a8b68453')
build() {
  cd "${srcdir}"/chaox-menus
  for x in *.directory
  do
    install -m 644 -D $x "${pkgdir}"/usr/share/desktop-directories/$x
  done
  for x in *.desktop
  do
    install -m 644 -D $x "${pkgdir}"/usr/share/applications/$x
  done
}
# vim:set ts=2 sw=2 et:
