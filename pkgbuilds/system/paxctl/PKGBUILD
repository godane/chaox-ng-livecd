pkgname=paxctl
pkgver=0.5
pkgrel=1
pkgdesc='Manages various PaX related program header flags for Elf32, Elf64, binaries'
url="http://pax.grsecurity.net"
arch=('i686' 'x86_64')
license=('GPL')
depends=()
source=("http://pax.grsecurity.net/${pkgname}-${pkgver}.tar.gz")
md5sums=('6ec138522977dc7654d33ddbe32755f0')

build() {
	cd "${srcdir}/${pkgname}-${pkgver}"
  sed -i "s|-Os -ggdb|$CFLAGS|" Makefile || return 1
	make || return 1
	make DESTDIR="${pkgdir}" install || return 1
}
