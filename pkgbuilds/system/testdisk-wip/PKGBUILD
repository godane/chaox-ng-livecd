# Contributor: Thomas Schneider <maxmusterm@gmail.com>
pkgname=testdisk-wip
pkgver=6.11
pkgrel=1
pkgdesc="Tool to check and undelete partition. Includes PhotoRec - tool to recover pictures from digital camera memory."
url="http://www.cgsecurity.org/wiki/TestDisk"
license=('GPL')
depends=('e2fsprogs' 'progsreiserfs' 'ntfsprogs' 'libjpeg' 'openssl')
conflicts=("testdisk")
replaces=("testdisk")
provides=("testdisk")
arch=('i686' 'x86_64')
source=("http://www.cgsecurity.org/${pkgname/-wip/}-$pkgver-WIP.tar.bz2")
md5sums=('056041430e3a869cf8e3b34b595d4ee2')
build() {
  cd "${srcdir}"/${pkgname/-wip/}-$pkgver-WIP
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="${pkgdir}" install
}
