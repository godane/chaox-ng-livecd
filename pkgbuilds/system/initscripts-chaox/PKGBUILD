# Contributor: Thomas Baechler <thomas@archlinux.org>
# Contributor: Aaron Griffin <aaron@archlinux.org>
pkgname=initscripts-chaox
pkgver=2009.03
pkgrel=1
pkgdesc="System initialization/bootup scripts"
arch=('i686' 'x86_64')
url="http://www.archlinux.org"
license=('GPL')
groups=('base')
backup=(etc/inittab etc/rc.conf etc/rc.local etc/rc.local.shutdown)
depends=('glibc' 'bash' 'awk' 'grep' 'coreutils' 'sed' 'udev>=118' 'net-tools' 'ncurses' 'kbd' 'findutils')
conflicts=("initscripts")
provides=("initscripts")
source=(ftp://ftp.archlinux.org/other/initscripts/initscripts-${pkgver}-1.tar.gz chaox.patch)
md5sums=('d602c7647fa2afc7e8530c2e6342350c'
         'f2a9cca38c9403c172be457dd3798d5c')
build() {
  cd "${srcdir}"/initscripts-${pkgver}-1/
  patch -Np0 -i "${srcdir}"/chaox.patch || return 1
  DESTDIR="${pkgdir}" ./install.sh || return 1
}
